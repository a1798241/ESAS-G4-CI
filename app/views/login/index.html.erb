<div class="index">
  <h1>Course Catalogue Editor</h1>

  <%= form_with(url: "/login/index", method: :get, local:true) do %>

    <div class="mb-3">
      <%= label_tag(:id, "Username:") %>
      <%= text_field_tag(:id, nil, value: session[:id], class: "login-box") %>

      <%= label_tag(:password, "Password:") %>
      <%= password_field_tag(:password, nil, class: "login-box") %>
    </div>

    <%= submit_tag("Login", class: "login") %>
    <%=link_to "Register", new_student_path, class: "login" %>
  <% end %>

</div>